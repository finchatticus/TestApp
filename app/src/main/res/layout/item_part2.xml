<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/item_part2_layout"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_gravity="left"
            android:id="@+id/image_part2_background"
            android:contentDescription="@string/description_imageview_background"/>

    <com.gjevass.pixels.testapp.app.ui.ElementImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/element_part2_image0"
            android:contentDescription="@string/description_elementimageview"/>

    <com.gjevass.pixels.testapp.app.ui.ElementImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/element_part2_image1"
            android:contentDescription="@string/description_elementimageview"/>

    <com.gjevass.pixels.testapp.app.ui.ElementImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/element_part2_image2"
            android:contentDescription="@string/description_elementimageview"/>

    <com.gjevass.pixels.testapp.app.ui.ElementImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/element_part2_image3"
            android:contentDescription="@string/description_elementimageview"/>

    <com.gjevass.pixels.testapp.app.ui.ElementImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/element_part2_image4"
            android:contentDescription="@string/description_elementimageview"/>

</FrameLayout>